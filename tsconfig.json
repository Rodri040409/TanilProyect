{
    "compilerOptions": {
        "outDir": "./build/JS/TS/",
        "target": "ES6",
        "module": "ES6",
        "moduleResolution": "Node",
        "sourceMap": true,
        "strict": true,
        "removeComments": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "importHelpers": false,  // ðŸ‘ˆ Necesario para tslib
        "types": ["node"]
    },
    "include": ["TS/**/*.ts"],
    "exclude": ["node_modules"]
}
